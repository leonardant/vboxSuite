<Application
    x:Class="mpeg2_player.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mpeg2_player"
    xmlns:localData="using:mpeg2_player.Data">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
                <ResourceDictionary Source="ms-appx:///Microsoft.PlayerFramework/themes/EntertainmentTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <x:String x:Key="AppName">MPEG-2 TS Player</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
